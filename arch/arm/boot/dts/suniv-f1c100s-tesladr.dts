	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};
};

&de {
	status = "okay";
};

&mmc0 {
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	broken-cd;
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins>;
	status = "okay";

	pcf8563: rtc@51 {
		compatible = "nxp,pcf8563";
		reg = <0x51>;
	};
};

/*
 * PC0 -- SPI0_CLK
 * PC1 -- SPI0_CS
 * PC2 -- SPI0_MISO
 * PC3 -- SPI0_MOSI
 * PE6 -- Interrupt
 * clock-frequency = <500000> 500KHz;
*/
&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins>;
	spi-max-frequency = <50000000>;
	status = "okay";

	can0: mcp2515@0 {
		compatible = "microchip,mcp2515";
		reg = <0x0>;
		clocks = <&osc24M>;
		spi-max-frequency = <10000000>;

		interrupt-parent = <&pio>;
		interrupts = <4 6 IRQ_TYPE_EDGE_RISING>;		/* PE6 */
		status = "okay";
	};
};

/*
 * PA0 -- SPI1_CS
 * PA1 -- SPI1_MOSI
 * PA2 -- SPI1_CLK
 * PA3 -- SPI1_MISO
 * PE3 -- Reset
 * PE4 -- Interrupt
 * PE5 -- LR_BUSY
*/
&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins>;
	status = "okay";
	spi-max-frequency = <50000000>;

	sx126x@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		spi-max-frequency = <10000000>;

		compatible = "semtech,sx126x";
		reg = <0x0>;

		reset-gpios = <&pio 4 3 GPIO_ACTIVE_LOW>;			/* PE3 */

		interrupt-parent = <&pio>;
		interrupts = <4 4 IRQ_TYPE_EDGE_RISING>;			/* PE4 / EINT3 */

		busy-gpios = <&pio 4 5 GPIO_ACTIVE_HIGH>;			/* PE5 */
	};
};

